<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">#295055</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="LinearStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FirstTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecondTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThirdTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FourthTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinkStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
